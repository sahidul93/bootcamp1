    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="53.0"/>
    <parameter name="url" value="https://www.amazon.com"/>

    <test name=" Amazon Home">
        <classes>

            <class name="AmazonHomePageTest"/>
            <!--<class name="AccountTest"/>
            <class name="AutoSuggestionTest"/>
            <class name="BrowsingProductTest"/>
            <class name="VerifyingItemTest"/>-->

        </classes>
    </test>
